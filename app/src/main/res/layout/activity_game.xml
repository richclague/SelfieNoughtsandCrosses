<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84BCDA">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="32dp"
        android:background="#F37748"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_row="1"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="4" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="5" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="6" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_row="2"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="7" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="2"
            android:background="#067BC2"
            android:onClick="dropIn"
            android:tag="8" />
    </GridLayout>


    <GridLayout
        android:id="@+id/matchScoreLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/playAgainButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:layout_row="0"
            android:layout_weight="1"
            android:onClick="playAgain"
            android:visibility="invisible"
            app:srcCompat="@drawable/reloadbutton" />

        <ImageView
            android:id="@+id/playerOneMatchScoreImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_row="1"
            android:layout_weight="1"
            android:background="#F37748" />

        <TextView
            android:id="@+id/matchScoreTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_weight="1"
            android:text="0 - 0"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/playerTwoMatchScoreImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:layout_row="1"
            android:layout_weight="1"
            android:background="#F37748" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>